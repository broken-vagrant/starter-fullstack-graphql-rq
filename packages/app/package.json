{
  "name": "@starter/app",
  "version": "0.1.0",
  "homepage": "https://zkindest.github.io/react-starter",
  "dependencies": {
    "apollo-link-token-refresh": "^0.4.0",
    "deepmerge": "^4.2.2",
    "graphql-ws": "^5.6.2",
    "jwt-decode": "^3.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6",
    "web-vitals": "2.1.4",
    "zustand": "^3.7.1"
  },
  "scripts": {
    "apollo:codegen": "apollo client:codegen --config=apollo.config.js --target=typescript",
    "download:schema": "apollo service:download --config=apollo.config.js graphql-schema-prod.json",
    "download:schema:local": "apollo service:download --endpoint=http://localhost:4000/ graphql-schema.json",
    "apollo:codgen:local": "yarn download:schema:local && apollo codegen:generate --localSchemaFile=graphql-schema.json --target=typescript",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint  --quiet --fix --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore --write",
    "precommit": "yarn run prettier",
    "msw:init": "msw init public/ --save"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/client": "3.5.10",
    "@testing-library/react": "12.1.3",
    "@testing-library/user-event": "13.5.0",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.12",
    "@vitejs/plugin-react": "1.2.0",
    "apollo": "^2.33.9",
    "cross-fetch": "^3.1.5",
    "jsdom": "latest",
    "msw": "0.38.1",
    "vite": "latest",
    "vitest": "latest"
  }
}
