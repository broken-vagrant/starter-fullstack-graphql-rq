{
  "name": "@starter/server",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only -r tsconfig-paths/register src/index",
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node src/schema",
    "publish:schema": "rover graph introspect http://localhost:4000 | rover graph publish starter-fullstack@current --schema -",
    "precommit": "yarn run prettier",
    "prettier": "prettier --ignore-path .gitignore --write",
    "lint": "tsc --noEmit && eslint  --quiet --fix --ignore-path .gitignore",
    "test": "rm -rf prisma/dev.db && prisma db push && jest",
    "prisma:migrate:init": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:db:push": "prisma db push",
    "gen:env-types": "gen-env-types .env -o src/types/env.d.ts -e ."
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@prisma/client": "3.10.0",
    "apollo-server": "3.6.3",
    "bcrypt": "^5.0.1",
    "cookie": "^0.4.2",
    "dotenv": "^16.0.0",
    "graphql": "15.8.0",
    "graphql-scalars": "1.14.1",
    "jsonwebtoken": "^8.5.1",
    "nexus": "1.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "16.11.26",
    "gen-env-types": "1.3.3",
    "get-port": "5.1.1",
    "graphql-request": "^4.0.0",
    "jest": "^27.5.1",
    "prisma": "3.10.0",
    "ts-jest": "^27.1.3",
    "ts-node": "10.6.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "^3.13.0",
    "typescript": "4.6.2"
  },
  "prisma": {
    "seed": "ts-node -r dotenv/config prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 10000,
    "testPathIgnorePatterns": [
      "dist",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "globals": {
      "ts-jest": {}
    },
    "testEnvironment": "node"
  }
}
