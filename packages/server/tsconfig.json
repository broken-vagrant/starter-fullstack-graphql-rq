{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "strict": true,
    "baseUrl": "./",
  },
  "include": ["src/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register", "dotenv/config"] //`tsconfig-paths/register` to make path aliases work with ts-node
  }
}
