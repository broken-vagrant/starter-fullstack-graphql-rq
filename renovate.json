{
  "extends": ["config:base"],
  "automergeType": "branch",
  "packageRules": [
    {
      "extends": [
        "packages:linters"
      ],
      "automerge": true,
    },
    {
      "extends": [
        "packages:test"
      ],
      "automerge": true,
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
    },
    {
      "matchPackageNames": [
        "concurrently",
        "typescript",
        "ts-node"
      ],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
